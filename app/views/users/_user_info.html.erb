<table class="table">
  <tr>
    <td class="col-md-3">
      <%= link_to image_tag("rails.png", size: Settings.views.user.size_image) %>
    </td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td class="pull-right text-info">
      <b><%= t "users.email" %> : </b>
    </td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td class="pull-right text-info">
      <b><%= t "users.join_date" %> : </b>
    </td>
    <td><%= @user.created_at.strftime Settings.date_format %></td>
  </tr>
  <tr>
    <td class="pull-right text-info">
      <b><%= t("users.courses_participate") %> : </b>
    </td>
    <div class="col-md-4 col-md-offset-2">
      <% @user.courses.each do |course| %>
        <td><%= link_to course.name, course_path(course) %></td>
      <% end %>
    </div>
  </tr>
</table>
