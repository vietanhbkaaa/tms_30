<% provide :title, @user.name %>
<div class="row">
  <div class="col-md-8">
    <%= render "user_info" %>
  </div>
  <div class="col-md-4">
    <h2 class="text-info">User activities</h2>
    <% if @user.activities.any? %>
      <% @activities.each do |log| %>
        <br>
        <%= log.type_action %> <%= t "views.messages.user_have_id" %>
        <%= log.target_id %>
      <% end %>
    <% end %>
  </div>
</div>
